{
    "$schema": "http://json.schemastore.org/template",
    "author": "Jos√© Matoso",
    "classifications": [ "Web", "Api", "WebApi" ],
    "identity": "CustomTemplate",
    "name": "Custom WebApi Template",
    "shortName": "my-custom",
    "sourceName": "CustomTemplate",
    "description": "Custom dotnet webapi template.",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "preferNameDirectory": true,
    "symbols": {
        "Framework": {
            "type": "parameter",
            "description": "The target framework for the project.",
            "datatype":"choice",
            "choices": [
                {
                    "choice": "net6.0"
                },
                {
                    "choice": "net5.0"
                }
            ],
            "defaultValue": "net6.0",
            "replaces": "{TargetFramework}"
        },
        "EnableSwaggerSupport":
        {
            "type": "parameter",
            "description": "Enable swagger support.",
            "datatype": "bool",
            "defaultValue": "true"
        }
    }
}